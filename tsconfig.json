{
  "compilerOptions": {
    "jsx": "preserve",
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node", // "bundler"?
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM",
      "scripthost"
    ],
    "skipLibCheck": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./resources/js/*"],
      "~/*": ["*"]
    },
    "types": ["naive-ui/volar"]
  },
  "include": ["resources/js/**/*.ts", "resources/js/**/*.d.ts", "resources/js/**/*.vue"],
  "exclude": [
    "node_modules",
    "api-client",
    "tests",
    "quarantine"
  ],
  }
